<div class="col-md-12">
	<div class="group">
		
		<%= link_to("写评论", new_movie_review_path(@movie), class: "btn btn-default pull-right")%>
		
		<% if current_user %>
			<%= link_to("编辑", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
		<% end %>
	</div>
	<h2><%= @movie.title %></h2>
	<p><%= @movie.theaterdate %></p>
	<p><%= @movie.description %></p>
	
	<table class="table">
		<thead>
			<tr>
				<th>评论内容</th>
				<th>评论人</th>
				<th>评论时间</th>
			</tr>
		</thead>
		<tbody>
			<% @reviews.each do |review| %>
				<tr>
					<td><%= review.content %></td>
					<td><%= review.user.email %></td>
					<td><%= review.created_at %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<div class="text-center">
		<%= will_paginate @reviews %>
	</div>
	
</div>