<div class="col-md-12">
	<div class="group">
		<% if current_user %>
			<%= link_to("创建电影", new_movie_path, class: "btn btn-primary pull-right") %>
		<% end %>
	</div>
	<table class="table table-hover">
		<thead>
			<tr class="text-center">
				<td>#</td>
				<td>电影名</td>
				<td>简介</td>
				<td>上映日期</td>
			</tr>
		</thead>
		<tbody>
			<% @movies.each do |movie| %>
				<tr class="text-center">
					<td>#</td>
					<td><%= link_to(movie.title, movie_path(movie)) %></td>
					<td width="60%" class="text-left"><%= movie.description %></td>
					<td><%= movie.theaterdate %></td>
					<td>
						<% if current_user %>
							<%= link_to("Edit", edit_movie_path(movie), class: "btn btn-sm btn-default") %>
							<%= link_to("Delete", movie_path(movie), class: "btn btn-sm btn-default", 
																	method: :delete, 
																	data: { confirm: "Are you sure?" })%>
                        <% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>